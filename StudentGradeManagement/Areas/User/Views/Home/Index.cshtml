@{
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
       
        <div class="text-center mb-5">
            <h2>Welcome, User!</h2>
            <p>Enter the Student ID below to view their result.</p>
        </div>

       
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form asp-area="User" asp-controller="Home" asp-action="Index" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group mb-3">
                                <label for="studentId">Student ID</label>
                                <input type="text" name="studentId" id="studentId" class="form-control" placeholder="Enter Student ID" />
                                <span asp-validation-for="studentId" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">View Result</button>
                        </form>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="text-danger mt-2">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
