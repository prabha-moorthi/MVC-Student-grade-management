@model StudentGradeManagement.Models.Student
@{
    Layout = "_AdminLayout";
}

<h2>Edit Student</h2>

<form asp-area="Admin" asp-controller="Students" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="StudentId" />

    <div class="form-group">
        <label asp-for="StudentId"></label>
        <input asp-for="StudentId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <h5>Term 1 Marks</h5>
    <div class="row">
        <div class="col">
            <label asp-for="Tamil_T1"></label>
            <input asp-for="Tamil_T1" class="form-control" />
            <span asp-validation-for="Tamil_T1" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="English_T1"></label>
            <input asp-for="English_T1" class="form-control" />
            <span asp-validation-for="English_T1" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Maths_T1"></label>
            <input asp-for="Maths_T1" class="form-control" />
            <span asp-validation-for="Maths_T1" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Science_T1"></label>
            <input asp-for="Science_T1" class="form-control" />
            <span asp-validation-for="Science_T1" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Social_T1"></label>
            <input asp-for="Social_T1" class="form-control" />
            <span asp-validation-for="Social_T1" class="text-danger"></span>
        </div>
    </div>

    <h5>Term 2 Marks</h5>
    <div class="row">
        <div class="col">
            <label asp-for="Tamil_T2"></label>
            <input asp-for="Tamil_T2" class="form-control" />
            <span asp-validation-for="Tamil_T2" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="English_T2"></label>
            <input asp-for="English_T2" class="form-control" />
            <span asp-validation-for="English_T2" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Maths_T2"></label>
            <input asp-for="Maths_T2" class="form-control" />
            <span asp-validation-for="Maths_T2" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Science_T2"></label>
            <input asp-for="Science_T2" class="form-control" />
            <span asp-validation-for="Science_T2" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Social_T2"></label>
            <input asp-for="Social_T2" class="form-control" />
            <span asp-validation-for="Social_T2" class="text-danger"></span>
        </div>
    </div>

    <h5>Term 3 Marks</h5>
    <div class="row">
        <div class="col">
            <label asp-for="Tamil_T3"></label>
            <input asp-for="Tamil_T3" class="form-control" />
            <span asp-validation-for="Tamil_T3" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="English_T3"></label>
            <input asp-for="English_T3" class="form-control" />
            <span asp-validation-for="English_T3" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Maths_T3"></label>
            <input asp-for="Maths_T3" class="form-control" />
            <span asp-validation-for="Maths_T3" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Science_T3"></label>
            <input asp-for="Science_T3" class="form-control" />
            <span asp-validation-for="Science_T3" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Social_T3"></label>
            <input asp-for="Social_T3" class="form-control" />
            <span asp-validation-for="Social_T3" class="text-danger"></span>
        </div>
    </div>

    <br/>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-area="Admin" asp-controller="Students" asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
