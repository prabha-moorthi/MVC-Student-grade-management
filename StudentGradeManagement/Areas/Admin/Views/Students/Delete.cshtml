@model StudentGradeManagement.Models.Student
@{
    Layout = "_AdminLayout";
}

<h2>Delete Student</h2>

<div>
    <h4>Are you sure you want to delete this student?</h4>
    <p>@Model.Name (ID: @Model.StudentId)</p>

    <form asp-area="Admin" asp-controller="Students" asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="StudentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="Admin" asp-controller="Students" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
