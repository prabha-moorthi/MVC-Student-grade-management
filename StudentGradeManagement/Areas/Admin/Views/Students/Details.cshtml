@model StudentGradeManagement.Models.Student
@{
    Layout = "_AdminLayout";
}

<h2>Student Details</h2>

<table class="table table-bordered">
    <tr><th>Student ID</th><td>@Model.StudentId</td></tr>
    <tr><th>Name</th><td>@Model.Name</td></tr>
</table>

<h4>Term 1 Marks</h4>
<table class="table table-bordered">
    <tr>
        <th>Tamil</th><th>English</th><th>Maths</th><th>Science</th><th>Social</th>
    </tr>
    <tr>
        <td>@Model.Tamil_T1</td>
        <td>@Model.English_T1</td>
        <td>@Model.Maths_T1</td>
        <td>@Model.Science_T1</td>
        <td>@Model.Social_T1</td>
    </tr>
</table>

<h4>Term 2 Marks</h4>
<table class="table table-bordered">
    <tr>
        <th>Tamil</th><th>English</th><th>Maths</th><th>Science</th><th>Social</th>
    </tr>
    <tr>
        <td>@Model.Tamil_T2</td>
        <td>@Model.English_T2</td>
        <td>@Model.Maths_T2</td>
        <td>@Model.Science_T2</td>
        <td>@Model.Social_T2</td>
    </tr>
</table>

<h4>Term 3 Marks</h4>
<table class="table table-bordered">
    <tr>
        <th>Tamil</th><th>English</th><th>Maths</th><th>Science</th><th>Social</th>
    </tr>
    <tr>
        <td>@Model.Tamil_T3</td>
        <td>@Model.English_T3</td>
        <td>@Model.Maths_T3</td>
        <td>@Model.Science_T3</td>
        <td>@Model.Social_T3</td>
    </tr>
</table>

<a asp-area="Admin" asp-controller="Students" asp-action="Index" class="btn btn-secondary">Back</a>
