<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        
        body {
            min-height: 100vh;
            margin: 0;
        }

        
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            padding-top: 20px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
        }

        
        .main-content {
            margin-left: 220px; 
            padding: 20px;
        }

       
        .topbar {
            width: 100%;
            height: 60px;
            position: sticky;
            top: 0;
            z-index: 1000;
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding-right: 20px;
        }
    </style>
</head>
<body>
    
    <nav class="sidebar">
        <div class="position-sticky">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Students" asp-action="Index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Students" asp-action="Create">Add Student</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Students" asp-action="List">List of Students</a>
                </li>
            </ul>
        </div>
    </nav>

    
    <div class="main-content">
        
        <div class="topbar">
            <form method="post" asp-controller="Account" asp-action="Logout">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger btn-sm">Logout</button>
            </form>
        </div>

        
        <div class="mt-3">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
